<div>
    <h1>Login</h1>
    {{#if error}}
        <p id="routes-error">{{error}}</p>
    {{/if}}
    <div id="error" class="error" hidden>I'm an error. I will change through Client-Side JS</div>
    <main>
        <form action="/login" method="POST" id="login-form">
            <label for="emailAddressInput" id="emailLabel">Email Address:</label>
            <input type="email" id = "emailAddressInput" name="emailAddressInput" placeholder="Email" class="full-width-input">
            <label for="passwordInput" id="passLabel">Password:</label>
            <input type="password" id = "passwordInput" name="passwordInput" placeholder="Password" class="full-width-input">
            <label for="submitInput" id="submitInput">Submit:</label>
            <input type="submit" id="submitInput" name="submitSearchCharacterByName" placeholder="Submit" class="full-width-input">
        </form>
        <a href="http://localhost:3000/register">Click here to register!</a>
    </main>
</div>
