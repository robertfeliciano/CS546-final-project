<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jukeboxd</title>
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v2.1.6/css/unicons.css">
    <link rel="stylesheet" href="../../public/style.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar">
        <div class="container">
            <h2 class="logo" onclick="redirectToHome()"> 
                Jukeboxd.
            </h2>
            <div class="search-bar">
                <i class="uil uil-search"></i>
                <input id="searchInput" type="search" placeholder="Search for a song or album......" onkeydown="searchOnEnter(event)">
            </div>
            <div class="profile-tr">
                <div class="profile-photo">
                    <img src="../../public/pics/profpic.png" alt="profile picture">
                </div>
            </div>
        </div>
    </nav>


    <!-- Main Posts -->
    <main>
        <div class="container">
            <!-------------------------- Left Sidebar -------------------------->
            <div class="left">
                <a class="profile">
                    <div class="profile-photo">
                        <img src="../../public/pics/profpic.png" alt="profile picture">
                    </div>
                    <div class="handle">
                        <h4>Patrick Hill</h4>
                        <p class="text-muted">
                            @graffixnyc
                        </p>
                    </div>
                </a>
                <div class="sidebar">
                    <h1 class="explore-header-left">
                        Explore Panel
                    </h1>
                    <a href="/posts" class="menu-item active" onclick="toggleActiveClass(this)">
                        <span>
                            <i class="uil uil-home"></i>
                        </span>
                        <h3>
                            Home
                        </h3>
                    </a>
                    <a href="/music/songs" class="menu-item" onclick="toggleActiveClass(this)">
                        <span>
                            <i class="uil uil-music"></i>
                        </span>
                        <h3>
                            Find Songs
                        </h3>
                    </a>
                        
                    <h1 class="settings-header-left">
                        Settings
                    </h1>
                    <a href="" class="menu-item" onclick="toggleActiveClass(this)">
                        <span>
                            <i class="uil uil-setting"></i>
                        </span>
                        <h3>
                            Settings
                        </h3>
                    </a>
                    <a href="" class="menu-item" onclick="toggleActiveClass(this)">
                        <span>
                            <i class="uil uil-sign-out-alt"></i>
                        </span>
                        <h3>
                            Logout
                        </h3>
                    </a>
                </div>
            </div>
            <!-------------------------- Main Content -------------------------->
            {{{body}}}

            <!-------------------------- Right Sidebar -------------------------->
            <div class="right">
                <div class="friends">
                    <div class="heading">
                        <h4>Friends</h4>
                    </div>
                    <!-- Search Bar -->
                    <div class="search-bar">
                        <i class="uil uil-search"></i>
                        <input type="search" placeholder="Search for a friend..." id="friend-search">
                    </div>
                    <!-- Categories -->
                    <div class="category">
                        <h6 class="active"> Following </h6>
                        <h6> Followers </h6>
                    </div>
                    <!-- Friends (will be dynamically populated) -->
                    <div id="friends-container"></div>
                </div>
            </div>
        </div>
    </main>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <script>
    function searchOnEnter(event) {
        if (event.key === 'Enter') {
            // Get the user input
            let userInput = document.getElementById('searchInput').value;

            // Replace spaces with '%20' in the query
            let query = userInput.replace(/ /g, '%20');

            // Call the GET request
            let newLink = '/music/search?user=' + query;
            console.log(newLink);
            window.location.href = '/music/search?piece=' + query;
        }
    };

    $(document).ready(function () {
        // Make an AJAX request to fetch the following data
        $.ajax({
            url: '/users/following', // Adjust the URL based on your server route
            type: 'GET',
            success: function (data) {
                // Assuming data is an array of following users
                var friendsContainer = $('#friends-container');

                // Iterate through the data and append friend elements to the container
                data.forEach(function (friend) {
                    var friendElement = `
                        <div class="friend">
                            <div class="profile-photo">
                                <img src="${friend.profilePic}" alt="profile picture">
                            </div>
                            <div class="friend-body">
                                <h5>${friend.name}</h5>
                                <p>Following</p>
                            </div>
                        </div>
                    `;
                    friendsContainer.append(friendElement);
                });
            },
            error: function (error) {
                console.error('Error fetching data:', error);
            }
        });
    });
    </script>
    <script>
        function redirectToHome() {
            // Use JavaScript to navigate to the desired URL
            window.location.href = `/home`;
        }
    </script>
</body>
</html>